{
# Fallback trailer used in case trailer data is missing to prevent crashes.

trailer : .fallback.trailer
{
	trailer_definition: trailer_def.scs.box.single_3.curtain

	accessories[]: .fallback.trailer.tchassis
	accessories[]: .fallback.trailer.trwheel0
	accessories[]: .fallback.trailer.trwheel1
	accessories[]: .fallback.trailer.trwheel2
	accessories[]: .fallback.trailer.paint_job

}

vehicle_accessory: .fallback.trailer.tchassis
{
    	data_path: "/def/vehicle/trailer/scs_box/curtain_sider/chassis.sii"
}

